---
import LinkButton from "./LinkButton.astro";
import { getLocale } from "astro-i18n-aut";

const lang = getLocale(Astro.url);

export interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl: string;
  nextUrl: string;
}

const { currentPage, totalPages, prevUrl, nextUrl } = Astro.props;

const prev = currentPage > 1 ? "" : "disabled";
const next = currentPage < totalPages ? "" : "disabled";
const isPrevDisabled = prev === "disabled";
const isNextDisabled = next === "disabled";

let i18n = {
  prev: "prev",
  next: "next",
};

switch (lang) {
  case "es":
    i18n.prev = "anterior";
    i18n.next = "siguiente";
    break;
  case "ca":
    i18n.prev = "anterior";
    i18n.next = "segÃ¼ent";
    break;
}
---

{
  totalPages > 1 && (
    <nav class="pagination-wrapper" aria-label="Pagination">
      <LinkButton
        disabled={isPrevDisabled}
        href={prevUrl}
        className={`mr-4 select-none ${prev}`}
        ariaLabel={i18n.prev}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class:list={[{ "disabled-svg": isPrevDisabled }]}
        >
          <path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z" />
        </svg>
        {i18n.prev}
      </LinkButton>
      {currentPage} / {totalPages}
      <LinkButton
        disabled={isNextDisabled}
        href={nextUrl}
        className={`ml-4 select-none ${next}`}
        ariaLabel={i18n.next}
      >
        {i18n.next}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class:list={[{ "disabled-svg": isNextDisabled }]}
        >
          <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
        </svg>
      </LinkButton>
    </nav>
  )
}

<style>
  .pagination-wrapper {
    @apply mb-8 mt-auto flex justify-center;
  }
  .disabled {
    @apply pointer-events-none select-none opacity-50 hover:text-skin-base group-hover:fill-skin-base;
  }
  .disabled-svg {
    @apply group-hover:!fill-skin-base;
  }
</style>
