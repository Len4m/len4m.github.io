---
import { type CollectionEntry, getCollection } from "astro:content";
import Posts from "@layouts/Posts.astro";
import PostDetails from "@layouts/PostDetails.astro";
import getSortedPosts from "@utils/getSortedPosts";
import getPageNumbers from "@utils/getPageNumbers";
import getPagination from "@utils/getPagination";
import { getPostSlug } from "@utils/postUtils";
import { LOCALE } from "@config";
import { getLocale } from "astro-i18n-aut";

const locale = getLocale(Astro.url) ?? LOCALE.lang;

LOCALE.lang = locale;

export interface Props {
  post: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
  const posts = await getCollection(
    "blog",
    ({ data }) => !data.draft && data.lang === 'es'
  );

  const postResult = posts.map(post => ({
    params: { slug: getPostSlug(post) },
    props: { post },
  }));

  const pagePaths = getPageNumbers(posts.length).map(pageNum => ({
    params: { slug: String(pageNum) },
  }));

  return [...postResult, ...pagePaths];
}

const { slug } = Astro.params;
const { post } = Astro.props;

// If no post found by slug, try to find by matching slug in frontmatter
let actualPost: CollectionEntry<"blog"> | undefined = post;
if (!actualPost && slug) {
  const allPosts = await getCollection("blog", ({ data }) => !data.draft && data.lang === 'es');
  actualPost = allPosts.find(p => getPostSlug(p) === slug) || undefined;
}

const posts = await getCollection("blog", ({ data }) => data.lang === locale);

const sortedPosts = getSortedPosts(posts);

const pagination = getPagination({
  posts: sortedPosts,
  page: slug,
});
---

{actualPost ? <PostDetails post={actualPost} /> : <Posts {...pagination} />}
