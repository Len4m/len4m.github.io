---
import { LOCALE, SITE, SOCIALS } from "@config";
import Avatar from "@components/Avatar.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";
import Socials from "@components/Socials.astro";
import { getLocale } from "astro-i18n-aut";

const locale = getLocale(Astro.url);

LOCALE.lang = locale;


export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="about" />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="prose mb-5 max-w-3xl prose-img:border-0">
      <h1 class="text-center text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
      <Avatar />
      <slot />
    </section>
    <section  class="mb-16 max-w-3xl">
    {
      // only display if at least one social link is enabled
      socialCount > 0 && (
        <div class="social-wrapper">
          <Socials />
        </div>
      )
    }
    </section>
  </main>
  <Footer />
</Layout>
